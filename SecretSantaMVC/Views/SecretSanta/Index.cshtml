@{
    ViewData["Title"] = "Secret Santa";
}

<h2>Upload Employee CSV</h2>
<form asp-action="UploadEmployeeCsv" asp-controller="SecretSanta" method="post" enctype="multipart/form-data">
    <input type="file" name="file" required />
    <button type="submit">Upload</button>
</form>

<h2>Upload Previous Assignments CSV</h2>
<form asp-action="UploadPreviousAssignmentsCsv" asp-controller="SecretSanta" method="post" enctype="multipart/form-data">
    <input type="file" name="file" required />
    <button type="submit">Upload</button>
</form>

<h2>Generate Secret Santa Assignments</h2>
<form asp-action="GenerateAssignments" asp-controller="SecretSanta" method="post">
    <button type="submit">Generate</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@if (ViewBag.FilePath != null)
{
    <a href="@ViewBag.FilePath" download>Download Secret Santa Assignments</a>
}
